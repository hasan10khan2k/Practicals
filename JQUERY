  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <style>
    body {
      font-family: Arial;
      text-align: center;
      background-color: #f2f2f2;
    }

    .card {
      width: 320px;
      margin: auto;
      padding: 20px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 0 15px lightgray;
    }

    img {
      width: 220px;
      height: 200px;
      border-radius: 10px;
    }

    button {
      margin: 5px;
      padding: 8px 14px;
      background-color: #444;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    button:hover {
      background-color: #222;
    }
  </style>
